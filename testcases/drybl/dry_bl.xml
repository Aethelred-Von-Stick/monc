<io-configuration>
	<server-configuration>
		<thread_pool number=10/>
	</server-configuration>

//#include "io/io_cfg_files/3d_fields.xml"
#include "io/io_cfg_files/profile_fields.xml"
#include "io/io_cfg_files/checkpoint.xml"

	<data-writing>
		<!file name="instantaneous_3d.nc" write_time_frequency="{diag_write_freq}" title="3D fields">
		  <!include group="3d_fields" time_manipulation="instantaneous"  output_frequency="{mm}"/>
		<!/file>
		<file name="profile.nc" write_time_frequency="{diag_write_freq}" title="Profile diagnostics">
		  <include group="profile_timeseries" time_manipulation="averaged"  output_frequency="{mm}"/>		  
		</file>
		<file name="checkpoint.nc" write_timestep_frequency="{checkpoint_freq}" title="Checkpoint" write_on_terminate=true>
			<include group="checkpoint_fields" time_manipulation="none"/>
			<include state="io">
		</file>
	</data-writing>

</io-configuration>
