<data-definition name="fields_3d" frequency="{sampling_frequency}">
	<field name="w" type="array" data_type="double" size="x,y,z" collective=true />
	<field name="thdiag_local" type="array" data_type="double" optional=true />
</data-definition>

<data-handling>
       <diagnostic field="thdiag"  type="array" data_type="double" size="zn" units="K">
	 <communication name="reduction" operator="mean" result="thdiag" field="thdiag_local" root="auto"/>
       </diagnostic>
</data-handling>

<group name="diagnostics_3d">
	<member name="w"/>
</group>
