<data-definition name="fields_3D" frequency="{sampling_frequency}">
<!-- --
      3D fields, just written out no processing
<!-- -->
  <field name="w" type="array" data_type="double" size="z,y,x" collective=true />
  <field name="u" type="array" data_type="double" size="z,y,x" collective=true />
  <field name="v" type="array" data_type="double" size="z,y,x" collective=true />
  <field name="q" type="array" data_type="double" size="z,y,x,qfields" collective=true />
<!-- --
      group name for all the 3D fields used in the data write statement
<!-- -->
<group name="instantaneous_3D">
  <member name="w"/>
  <member name="u"/>
  <member name="v"/>
  <member name="q"/>
</group>

